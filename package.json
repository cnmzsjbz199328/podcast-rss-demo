{
  "name": "podcast-rss-demo",
  "version": "1.0.0",
  "description": "AI-powered automated news podcast generator with RSS feed",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "wrangler dev",
    "dev:local": "wrangler dev --local",
    "test": "node --test tests/",
    "test:functions": "node test-functions.js --full",
    "test:integration": "node test-full-integration.js",
    "test:gradio": "node test-gradio-simple.js",
    "test:voice": "node test-voice-clone.js",
    "test:unit": "node test-voice-unit.js",
    "test:api": "node test-api-endpoints.js",
    "test:all": "echo '运行所有测试...' && npm run test:api && npm run test:unit && npm run test:voice",
    "validate": "node index.js --validate",
    "build": "echo 'No build step required'",
    "lint": "echo 'Add linting if needed'",
    "deploy": "wrangler deploy",
    "deploy:check": "node scripts/check-deployment.js",
    "deploy:prod": "npm run deploy:check && wrangler deploy",
    "deploy:interactive": "node scripts/deploy.js",
    "deploy:verify": "wrangler deployments list && wrangler tail",
    "deploy:logs": "wrangler tail --format pretty",
    "deploy:rollback": "wrangler deployments rollback",
    "secrets:set": "echo '设置敏感环境变量 - 交互式输入'",
    "secrets:list": "wrangler secret list",
    "r2:list": "wrangler r2 bucket list",
    "r2:info": "wrangler r2 bucket-metadata get podcast-files"
  },
  "keywords": [
    "podcast",
    "rss",
    "ai",
    "news",
    "automation",
    "cloudflare",
    "gemini",
    "tts"
  ],
  "author": "AI Podcast Generator",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.400.0",
    "@google/genai": "^0.2.0",
    "@gradio/client": "^0.7.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "dotenv": "^17.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/podcast-rss-demo.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/podcast-rss-demo/issues"
  },
  "homepage": "https://github.com/your-username/podcast-rss-demo#readme"
}
